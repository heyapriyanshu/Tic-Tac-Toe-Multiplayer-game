<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context=".MainActivity2">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button

                android:id="@+id/online1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:contentDescription=" "
                android:textSize="40sp" />

            <Button
                android:id="@+id/online2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:contentDescription=" "
                android:textSize="40sp" />

            <Button
                android:id="@+id/online3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:contentDescription=" "
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:contentDescription=" "
                android:id="@+id/online4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />

            <Button
                android:contentDescription=" "
                android:id="@+id/online5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />

            <Button
                android:contentDescription=" "
                android:id="@+id/online6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:contentDescription=" "
                android:id="@+id/online7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />

            <Button
                android:contentDescription=" "
                android:id="@+id/online8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />

            <Button
                android:contentDescription=" "
                android:id="@+id/online9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button

                android:id="@+id/restart_btn"
                android:layout_marginTop="15dp"
                android:layout_width="100dp"
                android:alpha="0.7"
                android:layout_height="wrap_content"
                android:text="reset" />
        </TableRow>
    </TableLayout>

    <ImageView


        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/logof"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Online"
        android:textColor="#7ed957"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:weightSum="3"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView

            android:id="@+id/player1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Player1 "
            android:gravity="right"
            android:textColor="#FF5757"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/score1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                android:text=" 0 "
                android:textColor="#000000"
                android:textSize="24dp" />
            <TextView


                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                android:text=" - "
                android:textColor="#000000"
                android:textSize="24dp" />

            <TextView

                android:id="@+id/score2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:gravity="center"
                android:text=" 0 "
                android:textColor="#000000"
                android:textSize="24dp" />
        </LinearLayout>

            <TextView

                android:id="@+id/player2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"

                android:text=" Player2 "
                android:textColor="#77000000"
                android:textSize="24dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>